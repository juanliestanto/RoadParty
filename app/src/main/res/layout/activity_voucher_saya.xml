<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vouchersaya"
    tools:context=".VoucherSayaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voucher Saya"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="120dp"
                android:fontFamily="@font/athitibold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="462dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="70dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/mencuci"
                        android:layout_marginLeft="70dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:text="Mencuci"
                            android:textColor="@color/black"
                            android:fontFamily="@font/athitibold"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:text="Rp."
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="1000"
                                android:layout_marginTop="10dp"
                                android:textSize="30sp"
                                android:textColor="@color/gold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:text="Dapatkan potongan harga sebesar Rp.1000 setiap mencuci seberat 2 Kg dalam satu kali Laundry."
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/athiti"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:fontFamily="@font/athiti"
                        android:text="- Berlaku untuk total berat Laundry Mencuci dalam satu pesanan"
                        android:textColor="@color/greyy"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:fontFamily="@font/athiti"
                        android:text="- Tidak dapat digunakan untuk selain mencuci"
                        android:textColor="@color/greyy"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:fontFamily="@font/athiti"
                        android:text="- Berlaku untuk semua jenis barang Laundry mencecui"
                        android:textColor="@color/greyy"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:fontFamily="@font/athiti"
                        android:text="- Klaim voucher terlebih dahulu sebelum membayar"
                        android:textColor="@color/greyy"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/barcode"
                    android:layout_marginHorizontal="70dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No. 63825129364"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="69sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="-100dp"
            android:background="@drawable/button"
            android:text="Klaim"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>

</FrameLayout>