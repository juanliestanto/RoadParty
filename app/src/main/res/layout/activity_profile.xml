<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profil"
    tools:context=".Register.BerandaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backhome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:src="@drawable/back"
                />
            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:text="Logout"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:fontFamily="@font/athitibold"

                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/athitibold"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="-50dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/button" />
            <ImageView
                android:layout_marginTop="50dp"
                android:layout_marginLeft="-45dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tvsandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-25dp"
                android:text="Ubah Kata Sandi"
                android:textSize="12dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="|"
                android:textSize="12dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Email"
                android:textSize="12dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:text="Nama Pengguna"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/tvPengguna"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:text="TEST"
                android:textColor="@color/black"
                android:gravity="right"
                android:fontFamily="@font/athitibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:text="Kontak"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/tvKontak"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:text="TEST"
                android:textColor="@color/black"
                android:gravity="right"
                android:fontFamily="@font/athitibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:text="Alamat"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/tvAlamat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:text="TEST"
                android:textColor="@color/black"
                android:gravity="right"
                android:fontFamily="@font/athitibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:text="TEST"
                android:textColor="@color/black"
                android:gravity="right"
                android:fontFamily="@font/athitibold"
                />

            <Button
                android:id="@+id/simpan"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:text="SIMPAN"
                android:textColor="@color/white"
                android:textSize="16dp"
                />

        </LinearLayout>

    </LinearLayout>



</FrameLayout>